# Environment variables - COPY TO .env AND FILL WITH REAL VALUES
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-frontend-url.vercel.app

# MongoDB - Get from MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret - Generate a secure random string
JWT_SECRET=your-super-secure-jwt-secret-here

# eSignet Configuration - Get from MOSIP registration
ESIGNET_BASE_URL=https://esignet.sandbox.mosip.net
ESIGNET_CLIENT_ID=your-client-id-from-mosip-registration
ESIGNET_CLIENT_SECRET=your-client-secret-from-mosip-registration